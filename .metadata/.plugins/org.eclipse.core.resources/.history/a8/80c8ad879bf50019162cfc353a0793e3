import java.util.Scanner;

public class Buffer {
	protected String lexema;
	protected int posAtual, posUltimo, posInicio;
	
	public Buffer(String lexema){
		this.lexema=lexema;
		this.posAtual=0;
		this.posUltimo=0;
		this.posInicio=0;
	}
	
	public char proximo() {
		return this.lexema.charAt(++this.posAtual);
	}
	public void marcarInicio(int posInicio){
		this.posInicio=posInicio;
	}
	public void marcarUltimo(int posUltimo){
		this.posUltimo = posUltimo;
		
	}
	
	public void retrair(int pos) {
		this.posAtual =pos; 
	}
	public void retrairAoUltimo() {
		this.posAtual =  this.lexema.charAt(this.lexema.length());
	}
	
	public String lexema() {
		return this.lexema.substring(this.inicio,this.posUltimo);
	}
}
